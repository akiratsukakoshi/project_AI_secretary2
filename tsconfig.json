{
  "exclude": ["./mcp-servers/**/*"],
  "include": ["./src/**/*", "./scripts/**/*"],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    // "rootDir": "./src",
    "rootDirs": ["./src", "./scripts"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
